<h1>Listing all articles</h1>
<p><%= link_to "Create new article", new_article_path, class: "btn btn-primary"  %></p>
<table class="table table-responsive table-condensed">
	<tr>
		<th>Title</th>
		<th>Description</th>
		<th>Action</th>
	</tr>
	<% @articles.each do |article| %>
		<tr>
			<td><%= article.title %></td>
			<td><%= article.description %></td>
			<td>
				<%= link_to "Show", article_path(article), class: "btn btn-sm btn-success" %>
				<%= link_to "Edit", edit_article_path(article), class: "btn btn-sm btn-info" %>
				<%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "Are you sure? "}, class: "btn btn-sm btn-danger" %>
			</td>
		</tr>
	<% end %>
</table>
