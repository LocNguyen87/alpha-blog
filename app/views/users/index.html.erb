<h1 class="text-center">All users list</h1>
<div class="text-center">
	<%= will_paginate %>
</div>
<% @users.each do |user| %>
	<div class="well well-lg">
		<div class="row">
			<div class="col-md-3 text-center">
				<%= link_to gravatar_for(user), user_path(user) %>
			</div>
			<div class="col-md-9 user-details">
				<h3><%= link_to user.username, user_path(user) %></h3>
				<p><%= pluralize(user.articles.count, "article") if user.articles %></p>
				<% if logged_in? and current_user.admin? %>
					<%= link_to "Delete user", user_path(user), method: :delete, data: {confirm: "Are you sure to delete this user ? "}, class: "btn btn-danger" %>
				<% end %>
			</div>
		</div>
	</div>
<% end %>
<div class="text-center">
	<%= will_paginate %>
</div>
